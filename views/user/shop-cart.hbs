<main>
  <!-- section -->
  <section class="mb-lg-14 mb-8 mt-8">
    <div class="container">
      <!-- row -->
      <div class="row">
        <div class="col-12">
          <!-- card -->
          <div class="card py-1 border-0 mb-8">
            <div>
              <h1 class="fw-bold">Shop Cart</h1>
            </div>
          </div>
        </div>
      </div>
      <!-- row -->
      <div class="row">
        <div class="col-lg-8 col-md-7">

          <div class="py-3">
            <!-- alert -->
            {{#if cartItems}}
                <div class="alert alert-danger p-2" role="alert">
                You’ve got FREE delivery. Start
                    <a href="#!" class="alert-link">checkout now!</a>
                </div>
            {{else}}
                <div class="alert alert-danger p-2" role="alert">
                Your cart is empty !!!!
                </div>
            {{/if}}
            <ul class="list-group list-group-flush">
              <!-- list group -->
              {{#each cartItems}}
                  <li class="list-group-item py-3 py-lg-0 px-0 border-top" id="cartItemRow_{{product.0._id}}">
                    <!-- row -->
                    <div class="row align-items-center">
                      <div class="col-3 col-md-2">
                        <!-- img -->
                        <img
                          src="/admin/images/products/{{product.0.thumbnail_image}}"
                          alt="{{product.0.name}}"
                          class="img-fluid"
                        /></div>
                      <div class="col-4 col-md-5">
                        <!-- title -->
                        <a
                          href="/product/{{product.0.name}}/{{_id}}"
                          class="text-inherit"
                        ><h6 class="mb-0">{{product.0.name}}</h6></a>
                        <span><small class="text-muted">₹ <span id="price_{{product.0._id}}">{{product.0.price}}</span> / {{product.0.unit}}</small></span>
                        <!-- text -->
                        <div class="mt-2 small lh-1">
                          <a
                            href="#"
                            class="text-decoration-none text-inherit"
                            
                          >
                            <span class="me-1 align-text-bottom">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="feather feather-trash-2 text-success"
                              >
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path
                                  d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                                >
                                </path>
                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                <line x1="14" y1="11" x2="14" y2="17"></line>
                              </svg></span><span
                              class="text-muted"  onclick="removeItem('{{product.0._id}}')"
                            >Remove</span></a></div>
                      </div>
                      <!-- input group -->
                      <div class="col-3 col-md-3 col-lg-2">
                        <!-- input -->
                        <div class="input-group input-spinner">
                          <input
                            type="button"
                            value="-"
                            id="button-minus_{{product.0._id}}"
                            class="button-minus btn btn-sm"
                            data-field="quantity"
                            onclick="decrementQuantity('{{product.0._id}}')"
                          />
                            <input
                              type="number"
                              step="1"
                              min="1"
                              max="{{product.0.quantity}}"
                              value="{{cart.quantity}}"
                              name="quantity"
                              id="quantity_{{product.0._id}}"
                              class="quantity-field form-control-sm form-input"
                            />
                          <input
                            type="button"
                            value="+"
                            id="button-plus_{{product.0._id}}"
                            onclick="incrementQuantity('{{product.0._id}}')"
                            class="button-plus btn btn-sm"
                            data-field="quantity"
                          />
                        </div>

                      </div>
                      <!-- price -->
                      <div
                        class="col-2 text-lg-end text-start text-md-end col-md-2"
                      >
                        <span class="fw-bold" >₹ <span id="productAmount_{{product.0._id}}">{{productAmount}}</span></span>

                      </div>
                    </div>

                  </li>
                {{/each}}
            </ul>
            <!-- btn -->
            <div class="d-flex justify-content-between mt-4">
              <a href="/" class="btn btn-primary">Continue Shopping</a>
            </div>

          </div>
        </div>

        <!-- sidebar -->
        {{#if cartItems}}
          <div class="col-12 col-lg-4 col-md-5">
            <!-- card -->
            <div class="mb-5 card mt-6">
              <div class="card-body p-6">
                <!-- heading -->
                <h2 class="h5 mb-4">Summary</h2>
                <div class="card mb-2">
                  <!-- list group -->
                  <ul class="list-group list-group-flush" id="cartItemList">
                    <!-- list group item -->
                    <li
                      class="list-group-item d-flex justify-content-between align-items-start"
                    >
                      <div class="me-auto">
                        <div>Item Subtotal</div>

                      </div>
                      <span>₹ <span id="totalPrice">{{totalCartSum}}</span></span>
                    </li>
                    <!-- list group item -->
                    <li
                      class="list-group-item d-flex justify-content-between align-items-start"
                    >
                      <div class="me-auto">
                        <div class="fw-bold">Subtotal</div>

                      </div>
                      <span class="fw-bold">₹ <span id="total">{{totalCartSum}}</span></span>
                    </li>
                  </ul>

                </div>
                <form action="/checkout/{{headerData.user._id}}" method="post">
                  <div class="d-grid mb-1 mt-4">
                    <!-- btn -->
                      <a href="#"><button
                        class="btn btn-primary btn-lg d-flex justify-content-between align-items-center"
                        type="submit"
                      >
                      Go to Checkout
                      <span class="fw-bold">₹ <span id="totalPriceCheckout">{{totalCartSum}}</span></span>
                      </button></a>
                  </div>
                <!-- text -->
                  <p><small>By placing your order, you agree to be bound by the
                      Freshcart
                      <a href="#!">Terms of Service</a>
                      and
                      <a href="#!">Privacy Policy.</a>
                    </small></p>

                <!-- heading -->
                  {{!-- <div class="mt-8">
                    <h2 class="h5 mb-3">Add Promo or Gift Card</h2>
                    <span id = "error-message" style="color:red"> </span> <br><br>  
                      <div class="mb-2">
                        <!-- input -->
                        <label for="giftcard" class="form-label sr-only">Email
                          address</label>
                        <input
                          type="text"
                          class="form-control"
                          id="giftcard" name="coupon"
                          placeholder="Promo or Gift Card"
                        />
                        <input type="hidden" name="couponAmount" id="couponAmount">
                      </div>
                      <!-- btn -->
                      <div class="d-grid" onclick="redeemCoupon()"><button
                          type="button"
                          class="btn btn-outline-dark mb-1" 
                        >Redeem</button></div>
                      <p class="text-muted mb-0">
                        <small>Terms & Conditions apply</small></p>
                  </div> --}}
                  <input type="hidden" id="actualAmount" value="{{totalCartSum}}">
                </form>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </section>

</main>

<script>
    async function removeItem(id){
        const productAmount =  document.getElementById('productAmount_'+id).innerText
        let response = await fetch('/cart/remove/item/'+id, {
            method: 'put',
        });
        let result = await response.json();
        if(result == 'success'){
            $("#cartItemRow_"+id).remove();
            const amount = document.getElementById('total').innerText - productAmount
            document.getElementById('total').innerText = amount
            document.getElementById('totalPriceCheckout').innerText = amount
            document.getElementById('totalPrice').innerText = amount
        }
    }

    async function decrementQuantity(id){
        let quantity = document.getElementById('quantity_'+id).value
        var decrementor = document.getElementById('button-minus_'+id)
        var incrementor = document.getElementById('button-plus_'+id)

        if(quantity == 1){
            decrementor.setAttribute("disabled", true);
        }else{
          decrementor.removeAttribute("disabled");
          incrementor.removeAttribute("disabled");
          quantity = quantity -1
          let price = document.getElementById('price_'+id).innerText
          let newPrice = quantity*price
          document.getElementById('productAmount_'+id).innerText = newPrice
          let totalAmount = document.getElementById('totalPrice').innerText
          let newAmount = (totalAmount - price).toFixed(2)
          document.getElementById('totalPrice').innerText = newAmount
          document.getElementById('totalPriceCheckout').innerText = newAmount
          document.getElementById('total').innerText = newAmount
          document.getElementById('actualAmount').value = newAmount

          const data = { quantity: quantity };
          let response = await fetch('/cart/update/quantity/'+id, {
              method: 'put',
              headers: {
                  'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
          });
          let result = await response.json();
          if(result == 'success'){
              console.log('success')
          }
        }
    }

    async function incrementQuantity(id){
      console.log(id)
      let max_value   = $('#quantity_'+id).attr('max')
      let quantity    = parseInt(document.getElementById('quantity_'+id).value)   
      var incrementor = document.getElementById('button-plus_'+id)
      var decrementor = document.getElementById('button-minus_'+id)

      if(quantity == max_value){
        incrementor.setAttribute("disabled", true);
      }else if(quantity<max_value){
        decrementor.removeAttribute("disabled");
        incrementor.removeAttribute("disabled");
        let selectedQty = quantity + 1
        console.log(selectedQty)
        let price       = parseInt(document.getElementById('price_'+id).innerText)
        let newPrice    = selectedQty*price
        console.log(newPrice)
        document.getElementById('productAmount_'+id).innerText = newPrice

        let totalAmount = parseInt(document.getElementById('totalPrice').innerText)
        let newAmount = (totalAmount + price).toFixed(2)
        document.getElementById('totalPrice').innerText = newAmount
        document.getElementById('totalPriceCheckout').innerText = newAmount
        document.getElementById('total').innerText = newAmount
        document.getElementById('actualAmount').value = newAmount
        const data = { quantity: selectedQty };
        let response = await fetch('/cart/update/quantity/'+id, {
            method: 'put',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        });
        let result = await response.json();
        if(result == 'success'){
            console.log('success')
        }
      }
  }

