<main>
  <!-- section -->
  <section>
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- col -->
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center d-md-none py-4">
            <!-- heading -->
            <h3 class="fs-5 mb-0">Account Setting</h3>
            <!-- button -->
            <button class="btn btn-outline-gray-400 text-muted d-md-none btn-icon btn-sm ms-3 " type="button"
              data-bs-toggle="offcanvas" data-bs-target="#offcanvasAccount" aria-controls="offcanvasAccount">
              <i class="bi bi-text-indent-left fs-3"></i>
            </button>
          </div>
        </div>
        <!-- col -->
        {{> user-account}}
        <div class="col-lg-9 col-md-8 col-12">
          <div class="py-6 p-md-6 p-lg-10">
            <div class="mb-6">
              <!-- heading -->
              {{#if message}}
                <div class="alert alert-primary" role="alert">
                  {{message}}
                </div>
              {{/if}}
              <h2 class="mb-0">Account Setting</h2>
            </div>
            <div>
              <!-- heading -->
              <h5 class="mb-4">Account details</h5>
              <div class="row">
                <div class="col-lg-5">
                  <!-- form -->
                  <form action="/account-settings" method="post">
                    <!-- input -->
                    <div class="mb-3">
                      <label class="form-label">First Name</label>
                      <input type="text" class="form-control" name="first_name" pattern="(^[A-Za-z]+$)$" title="Please enter a valid name" value="{{headerData.user.first_name}}">
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Last Name</label>
                      <input type="text" class="form-control" name="last_name" pattern="(^[A-Za-z]+$)$" title="Please enter a valid name" value="{{headerData.user.last_name}}">
                    </div>
                    <!-- input -->
                    <div class="mb-3">
                      <input type="hidden" class="form-control" name="email" value="{{headerData.user.email}}">
                    </div>
                    <!-- input -->
                    <div class="mb-5">
                      <label class="form-label">Phone</label>
                      <input type="text" class="form-control" name="phone" title="please enter a valid phone number" pattern="^\d{10}$" value="{{headerData.user.phone}}">
                    </div>
                    <!-- button -->
                    <div class="mb-3">
                      <button type="submit" class="btn btn-primary">Save Details</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <hr class="my-10">
            {{!-- <div>
              <!-- heading -->
              <h5 class="mb-4">Delete Account</h5>
              <p class="mb-2">Would you like to delete your account?</p>
              <p class="mb-5">This account contain {{#each cartCount}}
                      {{count}}
                    {{/each}} orders, Deleting your account will remove all the order details
                associated with it.</p>
              <!-- btn -->
              <a href="/delete/account/{{headerData.user.email}}" class="btn btn-outline-danger">I want to delete my account</a>
            </div> --}}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>